<body>

  <h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>

    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      </tr>

    <% end %>
    </tbody>
  </table>

  <h2>New book</h2>

  <%= form_with model:@book, url: { action: "index" }, method: :post do |f| %>

    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> errors prohibited this book from being saved:</h2>

        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h6>Title</h6>
    <%= f.text_field :title %>

    <h6>Body</h6>
    <%= f.text_area :body %>

    <div class="create">
    <%= f.submit 'Create Book' %>
    </div>

  <% end %>

</body>