<h1>Editing Book</h1>

<%= form_with model:@book do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> errors prohibited this book from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Body</h5>
  <%= f.text_area :body %>

  <div class="create">
  <%= f.submit 'Update Book' %>
  </div>

  <%= link_to "Show", book_path(@book.id) %>
    |
  <%= link_to "Back", books_path %>

<% end %>